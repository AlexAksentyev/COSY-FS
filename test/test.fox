    LOOP I 1 NUM;
      SR 0 0 0 0 0 X|I 0 0 1; SSR 0 0 1;
    ENDLOOP;
  ENDPROCEDURE;

  DIRSET WHERE 'data/TEST/' TRUE;
  GROUTF 'img/dump/TR' 1;

  OV 3 3 0;
  RP 270 1876.5592/AMUMEV 1;
  RPS 1 -.142987;


  CW_SETUP 0 0 0 ZEROS(32);

  INJECT_DELTA 10;
  TRACK 10 1 WHERE '' 0;
  
  WRITE 6 'SUCCESS!';
  
ENDPROCEDURE; {RUN}

RUN; END;
